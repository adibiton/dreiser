@import "nib"
@import "./bootstrap.min.css"
@import "./nprogress.css"
@import "./init.styl"
@import "./button.styl"


.navbar-inverse
  background-color: $violet-color;

.nav-pills>li.active>a, .nav-pills>li.active>a:focus, .nav-pills>li.active>a:hover
  background-color: $violet-color;


.navbar-inverse .navbar-nav>li>a
  color: $orange-color;

.navbar-inverse .navbar-brand
  color: $orange-color;


.alert.alert-warning
  background-color: $orange-color;
  color: $body-text

#nprogress
  & .bar
    background: $orange-color!important;
  & .spinner-icon
    border-top-color: $orange-color!important;
    border-left-color: $orange-color!important;



*
  text-rendering: initial!important;


body
  color: $body-text;
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  line-height: 1.4;


h1
h2
h3
h4
h5
h6
  color: $heading-text;
  font-family: inherit;
  font-weight: 300;
  line-height: 1;
  text-rendering: initial!important;


/*!
 * basic link styles
 */
a
  color: $link-color;
  transition: opacity 0.3s;
  &:visited
    color: $link-color;
  &:hover
    color: $link-color;
    opacity: 0.8;
    transition: opacity 0.3s;

ul
ol
  list-style: none;
  margin: 0;
  padding: 0;





// landing page start

.landing-page

  & .jumbotron
    background-image: url('/hero.jpg');
    margin: 0;

    & h1
    & p
      color: $orange-color;
      text-shadow: 0 0 18px #191326;
    & h1
      font-family: 'Playfair Display', serif;
      font-size: 3.4rem;


  & .fluid-container
    margin: 0;
    &.orange
      background-color: $orange-color;
      & h2
      & h3
        color: $violet-color;
    &.light-grey
      background-color: $light-grey;
      & h2
        color: $violet-color;
    &.white
      & h2
        color: $violet-color;

// landing page end



.resource-report
  margin-bottom: 3.0rem;


  & h4
    margin-bottom: 1.1rem;
    font-weight: bold;



.nav.nav-pills
  & li
    width: 33%;
    text-align: center;


  & a.list-group-item.active>.badge, .nav-pills>.active>a>.badge
    color: $orange-color;

.alert
  color: white;

.check-wrong-word
  background-color: $orange-color;
  padding: 3px 2px;



.report-content
  display: block;
  overflow: auto;
  position: relative;
  min-height: 100px;



.report-property-content
  font-weight: 300;
